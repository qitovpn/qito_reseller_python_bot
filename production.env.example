# Production Environment Configuration for QitopyBot
# Copy this file to .env and update with your actual values

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_TELEGRAM_ID=your_admin_telegram_id_here

# Flask Configuration (for web admin)
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Database Configuration
DATABASE_URL=sqlite:///data/bot_database.db

# Security
SECRET_KEY=your_secret_key_here_for_flask_sessions

# Optional: Logging
LOG_LEVEL=INFO
